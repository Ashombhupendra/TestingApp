<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/FUContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_button_round"
    android:padding="5dp"
    android:backgroundTint="@color/white"
    android:elevation="5dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_freelancer_userlist_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_logo_round"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/verified_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/badge"
        android:layout_marginEnd="-20dp"
        app:layout_constraintBottom_toBottomOf="@id/item_freelancer_userlist_img"
        app:layout_constraintEnd_toEndOf="@id/item_freelancer_userlist_img"
        android:elevation="20dp"/>
    <TextView
        android:id="@+id/item_freelancer_userlist_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_freelancer_userlist_img"
        app:layout_constraintStart_toEndOf="@id/item_freelancer_userlist_img"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        tools:text="Nitin Pawar"
        android:textSize="16sp"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/item_freelancer_userlist_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_freelancer_userlist_username"
        app:layout_constraintStart_toEndOf="@id/item_freelancer_userlist_img"
        android:layout_marginStart="15dp"
        tools:text="Photographer"
        android:capitalize="sentences"
        android:textSize="12sp"
        android:textColor="@color/blue_dark"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/item_freelancer_rating"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:paddingVertical="2dp"
        android:paddingHorizontal="0dp"
        app:layout_constraintStart_toStartOf="@id/item_freelancer_userlist_category"
        app:layout_constraintTop_toBottomOf="@id/item_freelancer_userlist_category"
        android:progressTint="@color/golden"
        android:progressBackgroundTint="@color/text_color"
        android:secondaryProgressTint="@color/golden"
        />
    <TextView
        android:id="@+id/item_freelancer_total_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_freelancer_rating"
        app:layout_constraintTop_toTopOf="@id/item_freelancer_rating"
        app:layout_constraintBottom_toBottomOf="@id/item_freelancer_rating"
        android:layout_marginHorizontal="10dp"
        tools:text="(25)"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>