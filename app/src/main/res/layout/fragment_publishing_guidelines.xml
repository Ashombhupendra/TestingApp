<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gray"
    tools:context=".peresentation.jobboard.postjob.PublishingGuidelines">

    <ImageView
        android:id="@+id/close_guidelines"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_margin="10dp"
        app:tint="@color/black" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/close_guidelines"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15sp"
        app:cardElevation="10dp"
        android:layout_height="0dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/publish_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:text="Publishing Guidelines"
               android:textColor="@color/white"
               android:background="@drawable/bg_button"
               android:textSize="15sp"
               android:textStyle="bold"
               android:paddingVertical="5dp"
               android:paddingHorizontal="30dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/blue_dark"/>
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               app:layout_constraintTop_toBottomOf="@id/publish_title"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:background="@android:color/transparent"
               android:layout_marginTop="10dp"
               app:layout_constraintEnd_toEndOf="parent">
dp            <TextView
                android:id="@+id/guideline_description"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="5dp"
                android:text="hello"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="match_parent"/>
           </ScrollView>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>