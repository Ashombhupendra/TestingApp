           <LinearLayout
               xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               android:id="@+id/root_layout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:padding="10dp">
               <RadioGroup
                   android:id="@+id/radio_group"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right"
                  >
                   <RadioButton
                       android:id="@+id/sort_by_date"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Date"
                       android:textColor="@color/white"
                       android:textSize="15sp"
                       android:checked="false"
                       android:buttonTint="@color/white"
                       android:layoutDirection="rtl"
                       android:textAlignment="textStart"
                       android:layout_gravity="start"
                       />

                   <RadioButton
                       android:id="@+id/sort_by_budget"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Budget"
                       android:textColor="@color/white"
                       android:textSize="15sp"
                       android:layoutDirection="rtl"
                       android:textAlignment="textStart"
                       android:layout_gravity="start"
                       android:checked="false"
                       android:buttonTint="@color/white"
                       />

                   <RadioButton
                       android:id="@+id/sort_by_rating"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Rating"
                       android:textColor="@color/white"
                       android:textSize="15sp"
                       android:layoutDirection="rtl"
                       android:textAlignment="textStart"
                       android:layout_gravity="start"
                       android:checked="false"
                       android:buttonTint="@color/white"
                      />

                   <RadioButton
                       android:id="@+id/sort_by_location"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Nearby Location"
                       android:textColor="@color/white"
                       android:textSize="15sp"
                       android:layoutDirection="rtl"
                       android:textAlignment="textStart"
                       android:layout_gravity="start"
                       android:checked="false"
                       android:buttonTint="@color/white"
                      />
               </RadioGroup>
           </LinearLayout>
       </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frelencer_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/freelencer_toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="27dp"
        tools:listitem="@layout/item_freelancer_userlist" />

    <TextView
        android:id="@+id/no_user_found"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/freelencer_toolbar"
        android:textColor="@color/blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/no_user_found"
        android:textSize="18sp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_marginVertical="30dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>


</layout>