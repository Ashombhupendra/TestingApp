<?xml version="1.0" encoding="utf-8"?>
<layout >
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    android:layout_height="250dp">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

          <ImageView
              android:id="@+id/item_poses_image_pic"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:src="@drawable/place_holder_img"/>


          <ImageView
              android:id="@+id/item_poses_iamge_Fav"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_margin="10dp"
              android:visibility="visible"
              android:src="@drawable/poses_item_heart1"/>
          <ImageView
              android:id="@+id/item_poses_images_unfav"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_margin="10dp"
              android:src="@drawable/poses_heart_item2"
              />

          <ImageView
              android:id="@+id/item_poses_images_add"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@id/item_poses_iamge_Fav"
              android:layout_margin="10dp"
              android:scaleType="centerInside"
              android:src="@drawable/add_poses_image_icon"
              app:tint="#f00f67" />

     </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.cardview.widget.CardView>
</layout>