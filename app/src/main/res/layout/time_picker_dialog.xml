<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/blue_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/time_pickertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:textColor="@color/blue_dark"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/time_pickertitle"
        app:layout_constraintStart_toStartOf="parent"
        android:forceDarkAllowed="false"
        android:background="@color/blue_gray"
        android:numbersBackgroundColor="@color/blue_dark"
        android:numbersTextColor="@color/blue_gray"
        android:numbersSelectorColor="@color/white"
        android:headerBackground="@color/blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="10dp"

        android:timePickerMode="clock"/>
    <TextView
        android:id="@+id/time_picker_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:padding="10dp"
        android:textColor="@color/blue_dark"
         android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/timePicker1"
        app:layout_constraintEnd_toEndOf="@id/timePicker1"/>
    <TextView
        android:id="@+id/time_picker_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:padding="10dp"
        android:visibility="invisible"
        android:textColor="@color/blue_dark"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/timePicker1"
       app:layout_constraintEnd_toStartOf="@id/time_picker_ok"/>
</androidx.constraintlayout.widget.ConstraintLayout>