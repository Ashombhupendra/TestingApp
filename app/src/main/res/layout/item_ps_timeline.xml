<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_ps_timeline_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="@string/discuss_tip"
        android:textColor="@color/text_color"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_ps_timeline_sub_title"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="0dp"/>
    <TextView
        android:id="@+id/item_ps_timeline_sub_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="05:07 pm"
        android:textColor="@color/text_color"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/item_ps_timeline_title"
        app:layout_constraintTop_toTopOf="@id/item_ps_timeline_title"
        app:layout_constraintStart_toEndOf="@id/item_ps_timeline_title"
        app:layout_constraintEnd_toStartOf="@id/item_ps_timeline_switch"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="0dp"/>

    <Switch
        android:id="@+id/item_ps_timeline_switch"
        android:layout_width="55dp"
        android:checked="false"
        android:theme="@style/SCBSwitch"
        app:layout_constraintStart_toEndOf="@id/item_ps_timeline_sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_ps_timeline_title"
        app:layout_constraintBottom_toBottomOf="@id/item_ps_timeline_title"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/item_ps_timeline_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>