<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/event_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/upcoming"
    android:padding="10dp"

    >


    <TextView
        android:id="@+id/item_event_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="12 Aug 2021"
        app:layout_constraintEnd_toStartOf="@id/item_event_status"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/item_event_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="upcoming"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/upcoming"
        app:layout_constraintTop_toTopOf="@id/item_event_date"
        app:layout_constraintStart_toEndOf="@id/item_event_date"/>
    <TextView
        android:id="@+id/item_event_venue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_event_date"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sayaji Hotel Indore"
        android:textColor="@color/white"
        android:textSize="13sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>