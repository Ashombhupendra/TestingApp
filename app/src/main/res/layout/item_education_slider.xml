<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:app="http://schemas.android.com/apk/res-auto">

       <androidx.cardview.widget.CardView
           android:id="@+id/image_container"
           android:layout_width="match_parent"

           android:elevation="10dp"
           android:layout_marginHorizontal="10dp"
           app:cardBackgroundColor="@color/white"
           android:layout_height="match_parent"
           tools:ignore="MissingConstraints">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <ImageView
               android:id="@+id/item_education_iv"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/place_holder_img"
               android:scaleType="fitXY"
               />


    <TextView
        android:id="@+id/item_education_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build Your own lightroom preset"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:ems="3"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/item_education_tv_description"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/item_education_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HINDI|LIGHTROOM|PRESET|PHOTOEDITING"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:maxLines="2"
        android:ems="3"
        android:layout_marginHorizontal="20dp"
        android:ellipsize="end"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:layout_marginVertical="30dp"
        tools:ignore="MissingConstraints" />
           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>