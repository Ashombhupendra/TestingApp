<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginVertical="0dp"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_freelancer"
        android:layout_width="70dp"
        app:cardCornerRadius="100dp"
        app:cardBackgroundColor="@color/white"
       app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/search_freelancer_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fs_camera"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/verified_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/badge"
        app:layout_constraintEnd_toEndOf="@id/cv_search_freelancer"
        app:layout_constraintBottom_toBottomOf="@id/cv_search_freelancer"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="5dp"
        android:elevation="20dp"/>
    <TextView
        android:id="@+id/search_freelancer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_search_freelancer"
        android:text="Shooting Studio/Location"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/blue_dark"
        app:layout_constraintTop_toBottomOf="@id/cv_search_freelancer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:capitalize="sentences"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>