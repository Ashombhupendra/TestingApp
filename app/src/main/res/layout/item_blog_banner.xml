<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:id="@+id/iv_item_blog_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:elevation="5dp"
            android:src="@drawable/place_holder_img"
            android:scaleType="fitXY"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/item_blog_unfav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintEnd_toEndOf="@id/iv_item_blog_banner"
            app:layout_constraintTop_toTopOf="@id/iv_item_blog_banner"
            />

        <ImageView
            android:id="@+id/item_blog_fav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_favorite_24"
            app:layout_constraintEnd_toEndOf="@id/iv_item_blog_banner"
            app:layout_constraintTop_toTopOf="@id/iv_item_blog_banner"
            />


        <TextView
            android:id="@+id/tv_item_blog_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical vs Intellectual Effort in photographer"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/iv_item_blog_banner"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="0dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>