<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_manage_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_text"
    android:backgroundTint="@color/white"
    android:layout_marginHorizontal="10dp"
    android:elevation="3dp"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_manage_applied_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Photography"
        app:layout_constraintEnd_toStartOf="@id/item_manage_applied_menu"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/item_manage_applied_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Freelancer Candid Photographer for 23rd November"
        app:layout_constraintEnd_toStartOf="@id/item_manage_applied_menu"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_manage_applied_title"
        android:layout_marginVertical="5dp"
        android:textSize="13sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/jbd_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/item_manage_applied_des"
        android:background="@drawable/bg_button"
        android:backgroundTint="#D9EFDA"
        android:textColor="@color/green"
        android:textAlignment="center"
        android:paddingVertical="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_manage_applied_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-15k per Day"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/jbd_open"
        app:layout_constraintTop_toBottomOf="@id/item_manage_applied_des"
        android:layout_marginVertical="20dp"
        android:textSize="15sp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_manage_applied_cv"
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jbd_open"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/item_applied_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/profile_image_bg"
            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_manage_applied_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The Wedding Story"
        app:layout_constraintTop_toTopOf="@id/item_manage_applied_cv"
        app:layout_constraintStart_toEndOf="@id/item_manage_applied_cv"
        app:layout_constraintEnd_toStartOf="@id/item_manage_applied_time"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_manage_applied_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_manage_applied_username"
        app:layout_constraintStart_toEndOf="@id/item_manage_applied_cv"
        android:hint="New Delhi"
        android:textSize="15sp"
        android:text="New Delhi"
        app:layout_constraintEnd_toStartOf="@id/item_manage_applied_time"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:layout_marginVertical="0dp"
        android:layout_marginHorizontal="10dp"
        android:maxLines="1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_manage_applied_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="2hr ago"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_manage_applied_username"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"/>


    <ImageView
        android:id="@+id/item_manage_applied_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_manage_applied_title"
        android:layout_marginHorizontal="10dp"
        tools:ignore="MissingConstraints"
        app:tint="@color/grey" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>