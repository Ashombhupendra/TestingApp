<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_questionnaire_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">
     <TextView
         android:id="@+id/item_questionnaire_text"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/item_questionnaire_view"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/ic_question_menu"
         android:textSize="18sp"
         android:layout_marginVertical="10dp"
         android:textColor="@color/text_color"
         tools:text="@string/discuss_tip"
         />
     <ImageView
         android:id="@+id/ic_question_menu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="@id/item_questionnaire_text"
         app:layout_constraintBottom_toBottomOf="@id/item_questionnaire_text"
         app:layout_constraintEnd_toEndOf="parent"
         android:src="@drawable/ic_baseline_delete_24"
         android:paddingHorizontal="10dp"
         android:paddingVertical="10dp"
         app:layout_constraintStart_toEndOf="@id/item_questionnaire_text"
         app:tint="@color/blue_dark" />


    <View
        android:id="@+id/item_questionnaire_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/item_questionnaire_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>