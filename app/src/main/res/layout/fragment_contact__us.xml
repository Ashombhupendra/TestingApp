<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".peresentation.settings.Contact_Us">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_us_toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/contact_us_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textColor="@color/blue_dark"
            android:textStyle="bold"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <EditText
        android:id="@+id/contact_us_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        app:layout_constraintTop_toBottomOf="@id/contact_us_toolbar"
        android:textSize="18sp"
        android:background="@drawable/bg_button_15_outline"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/grey"
        android:textColor="@color/blue_dark"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/contact_us_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/contact_us_name"
        android:textSize="18sp"
        android:background="@drawable/bg_button_15_outline"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/grey"
        android:textColor="@color/blue_dark"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/contact_us_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Feedback"
        app:layout_constraintTop_toBottomOf="@id/contact_us_email"
        android:textSize="18sp"
        android:minLines="3"
        android:gravity="top"
        android:background="@drawable/bg_button_15_outline"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/grey"
        android:textColor="@color/blue_dark"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/contact_us_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_us_feedback"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="60dp"
        android:paddingVertical="10dp"
        android:textColor="@color/white"
        android:text="SUBMIT"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/blue_dark"
        tools:ignore="MissingConstraints" />

