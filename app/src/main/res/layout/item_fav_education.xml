<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_fav_education_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_fav_education_cv"
        android:layout_width="90dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="90dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/item_fav_education_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_image_bg"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_fav_education_title"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/item_fav_education_cv"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="4"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toTopOf="@id/item_fav_education_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_fav_education_cv"
        android:text="@string/discuss_tip"
        android:textSize="16sp"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>