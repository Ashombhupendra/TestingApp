<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.dbvertex.job.peresentation.photoshoot.PhotoShootViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peresentation.photoshoot.presaved.Photoshoot_Presaved_detail">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offline_toolbar"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/back_offline_podcast"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-Saved Message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/blue_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/save_photoshoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/blue_dark"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/offline_toolbar"
        android:background="@color/text_color"/>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:paddingBottom="70dp"
       android:layout_marginTop="1dp"
       app:layout_constraintTop_toBottomOf="@id/offline_toolbar"
       app:layout_constraintBottom_toBottomOf="parent">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <EditText
               android:id="@+id/photoshoot_presaved_d_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:backgroundTint="@color/blue_dark"
               android:hint="Enter Title Here"
               android:textColorHint="@color/blue_gray"
               tools:text="@tools:sample/lorem"

               android:text="@={viewmodel.presavedTitle}"
               android:textSize="25sp"
               android:textStyle="bold"
               android:paddingHorizontal="10dp"
               android:textColor="@color/black"
               android:layout_marginHorizontal="10dp"/>
           <EditText
               android:id="@+id/photoshoot_presaved_d_description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/photoshoot_presaved_d_title"
               android:backgroundTint="@color/blue_dark"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:text="@={viewmodel.presavedDescription}"
               android:maxLength="800"
               tools:text="@tools:sample/lorem/random"
               android:hint="Enter Description Here"
               android:textColorHint="@color/blue_gray"
               android:textSize="18sp"
               android:paddingHorizontal="10dp"
               android:textColor="@color/text_color"
               android:layout_marginHorizontal="10dp"/>


       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:background="@color/transparent"
       android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginBottom="20dp"
          android:background="@color/transparent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/photoshoot_presave_d_share"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/photoshoot_presave_d_save"
              android:text="Share to mail"
              android:textSize="18sp"
              android:textAlignment="center"
              android:elevation="10dp"
              android:textStyle="bold"
              android:backgroundTint="@color/blue_gray"
              android:layout_marginHorizontal="30dp"
              android:background="@drawable/bg_free_item"
              android:textColor="@color/blue_dark"
              android:padding="10dp"
              />
          <TextView
              android:id="@+id/photoshoot_presave_d_save"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@id/photoshoot_presave_d_share"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="Save"
              android:layout_marginHorizontal="30dp"
              android:textSize="18sp"
              android:elevation="10dp"
              android:textStyle="bold"
              android:textAlignment="center"
              android:background="@drawable/bg_free_item"
              android:backgroundTint="@color/blue_dark"
              android:textColor="@color/white"
              android:padding="10dp"
              />

      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>